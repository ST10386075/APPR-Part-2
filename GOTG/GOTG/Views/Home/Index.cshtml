@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-section">
    <div class="container">
        <h1>Disaster Alleviation Foundation</h1>
        <p class="lead">Providing immediate relief and long-term recovery support to communities affected by natural disasters</p>
        <div class="mt-4">
            <a asp-controller="Incident" asp-action="Report" class="btn btn-warning btn-lg me-3">
                <i class="fas fa-exclamation-triangle me-2"></i> Report Incident
            </a>
            <a asp-controller="Donation" asp-action="Create" class="btn btn-success btn-lg me-3">
                <i class="fas fa-donate me-2"></i> Make a Donation
            </a>
            <a asp-controller="Volunteer" asp-action="Register" class="btn btn-light btn-lg">
                <i class="fas fa-hands-helping me-2"></i> Become a Volunteer
            </a>
        </div>
    </div>
</div>

<div class="container my-5">
    <div class="emergency-banner">
        <i class="fas fa-exclamation-circle me-2"></i>
        In case of emergency, please call 911 immediately
    </div>

    <div class="row text-center mb-5">
        <div class="col-lg-4 mb-4">
            <div class="feature-card card h-100">
                <div class="card-body p-4">
                    <div class="feature-icon">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <h4 class="card-title">Report Incidents</h4>
                    <p class="card-text">Quickly report natural disasters and emergencies in your area to help us coordinate relief efforts effectively.</p>
                    <a asp-controller="Incident" asp-action="Report" class="btn btn-outline-primary">Report Now</a>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="feature-card card h-100">
                <div class="card-body p-4">
                    <div class="feature-icon">
                        <i class="fas fa-donate"></i>
                    </div>
                    <h4 class="card-title">Make Donations</h4>
                    <p class="card-text">Support affected communities by donating resources, funds, or essential supplies for disaster relief.</p>
                    <a asp-controller="Donation" asp-action="Create" class="btn btn-outline-primary">Donate Now</a>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="feature-card card h-100">
                <div class="card-body p-4">
                    <div class="feature-icon">
                        <i class="fas fa-hands-helping"></i>
                    </div>
                    <h4 class="card-title">Volunteer</h4>
                    <p class="card-text">Join our network of volunteers and contribute your time and skills to help communities in need.</p>
                    <a asp-controller="Volunteer" asp-action="Register" class="btn btn-outline-primary">Volunteer Now</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card">
                <div class="card-header text-center">
                    <h3 class="mb-0">Recent Disaster Incidents</h3>
                </div>
                <div class="card-body">
                    <div class="text-center py-4">
                        <i class="fas fa-info-circle text-muted me-2"></i>
                        <span class="text-muted">Recent incidents will be displayed here once reported.</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
