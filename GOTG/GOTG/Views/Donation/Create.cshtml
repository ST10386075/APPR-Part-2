@model DisasterAlleviationFoundation.ViewModels.DonationViewModel
@{
    ViewData["Title"] = "Make a Donation";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0"><i class="fas fa-donate me-2"></i>Make a Donation</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="DonationType" class="form-label">Donation Type</label>
                            <select asp-for="DonationType" class="form-select" id="donationType">
                                <option value="">Select donation type</option>
                                <option value="Monetary">Monetary Donation</option>
                                <option value="Goods">Goods/Supplies</option>
                                <option value="Services">Services</option>
                            </select>
                            <span asp-validation-for="DonationType" class="text-danger small"></span>
                        </div>

                        <!-- Monetary Donation Fields -->
                        <div id="monetaryFields" class="donation-section" style="display: none;">
                            <div class="mb-3">
                                <label asp-for="Amount" class="form-label">Donation Amount ($)</label>
                                <input asp-for="Amount" type="number" step="0.01" min="1" class="form-control" placeholder="Enter amount" />
                                <span asp-validation-for="Amount" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Goods Donation Fields -->
                        <div id="goodsFields" class="donation-section" style="display: none;">
                            <div class="mb-3">
                                <label asp-for="ItemCategory" class="form-label">Item Category</label>
                                <select asp-for="ItemCategory" class="form-select">
                                    <option value="">Select category</option>
                                    <option value="Food">Food & Water</option>
                                    <option value="Clothing">Clothing</option>
                                    <option value="Medical">Medical Supplies</option>
                                    <option value="Shelter">Shelter Materials</option>
                                    <option value="Other">Other</option>
                                </select>
                                <span asp-validation-for="ItemCategory" class="text-danger small"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Quantity" class="form-label">Quantity</label>
                                <input asp-for="Quantity" type="number" min="1" class="form-control" placeholder="Enter quantity" />
                                <span asp-validation-for="Quantity" class="text-danger small"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Description" class="form-label">Item Description</label>
                                <input asp-for="Description" class="form-control" placeholder="Describe the items you're donating" />
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Services Donation Fields -->
                        <div id="servicesFields" class="donation-section" style="display: none;">
                            <div class="mb-3">
                                <label asp-for="Description" class="form-label">Service Description</label>
                                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Describe the services you're offering"></textarea>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DeliveryAddress" class="form-label">Delivery/Pickup Address</label>
                            <textarea asp-for="DeliveryAddress" class="form-control" rows="2" placeholder="Where can we collect the donation?"></textarea>
                            <span asp-validation-for="DeliveryAddress" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IncidentId" class="form-label">Target Incident (Optional)</label>
                            <select asp-for="IncidentId" class="form-select">
                                <option value="">Select specific incident (or leave for general fund)</option>
                                @foreach (var incident in Model.AvailableIncidents)
                                {
                                <option value="@incident.IncidentId">@incident.Title</option>
                                }
                            </select>
                            <span asp-validation-for="IncidentId" class="text-danger small"></span>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Thank you for your generosity!</strong> Your donation will help provide critical support to communities in need.
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary me-md-2">Cancel</a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-donate me-2"></i>Submit Donation
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
<script>
        $(document).ready(function() {
            $('#donationType').change(function() {
                $('.donation-section').hide();

                switch($(this).val()) {
                    case 'Monetary':
                        $('#monetaryFields').show();
                        break;
                    case 'Goods':
                        $('#goodsFields').show();
                        break;
                    case 'Services':
                        $('#servicesFields').show();
                        break;
                }
            });
        });
</script>
}